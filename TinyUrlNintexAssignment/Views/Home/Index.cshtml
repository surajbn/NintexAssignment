@model TinyUrl
@{
    ViewData["Title"] = "Create a new short URL";
}
<br />

<partial name="../shared/_ActionUrls" />
<div class="jumbotron">
    <h1>Nintex Assignment - URL Shortener</h1>
    <br />
    <p>Enter an URL to shorten it!</p>
    <br />
    <div class="form-horizontal">
        <div class="input-group input-group-lg">
            <input id="original-url" class="form-control" placeholder="Paste the URL to be shorten..." />
            <span class="input-group-btn">
                <button id="convert-url" class="btn btn-primary">Process URL</button>
            </span>
        </div>
    </div>


    <br />
    <div style="display:none;" data-bind="visible: UrlEncoded">
        <h1>Results</h1>
        <br />
        <p>You can see below the details of this short URL.</p>
        <br />
        <ul>
            <li>
                <span class="col-md-2">
                    <strong>Id:</strong>

                </span>
                <span data-bind="text:Id" id="url-id"></span>
            </li>
            <li>
                <span class="col-md-2">
                    <strong>Original URL:</strong>

                </span>
                <span id="original-url"></span>
                <a target="_blank" id="original-url" data-bind="text:OriginalUrl,attr: { href: OriginalUrl}">

                </a>
            </li>
            <li>
                <span class="col-md-2">
                    <strong>Short URL:</strong>
                </span>
                <a href="#" target="_blank" id="redirection-link" data-bind="text: EncodedUrl,attr: { href: EncodedUrl}">

                </a>
            </li>
        </ul>
    </div>
</div>